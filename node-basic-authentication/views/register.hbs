{{!-- We could omit the action, as the path in which this form is rendered
is the same as the post request handler for said form --}}
<form action="/register" method="POST">
  <label for="input-name">Full Name</label>
  <input type="text" id="input-name" name="name" placeholder="Full Name">

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Email">

  <label for="input-password">Password</label>
  <input type="password" id="input-password" name="password" placeholder="A safe password">

  <button>Register new user</button>
</form>